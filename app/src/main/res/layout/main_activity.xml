<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".MainActivity">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/background_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_bookk"/>
    <LinearLayout
        android:alpha="0.72"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="BOOK STORE"
        android:textSize="30dp"
        android:textColor="@color/xanhduong"
        android:layout_marginTop="90dp"
        android:textStyle="bold"/>
    <TextView
        android:visibility="gone"
        android:fontFamily="@font/roboto_medium"
        android:id="@+id/start_btn"
        android:layout_marginTop="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Bắt đầu"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:textSize="16sp"
        android:id="@+id/text_footer"
        android:layout_marginBottom="22dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHẦN MỀM QUẢN LÝ SÁCH"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/textGrey" />
    <LinearLayout
        android:layout_marginBottom="200dp"
        android:layout_gravity="bottom|center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/dangky"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/xanhduong"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textAllCaps="true"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:paddingRight="23dp"
                android:paddingLeft="23dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="ĐĂNG KÝ NẾU BẠN LÀ NGƯỜI MỚI "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trangnhat"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dangnhap"
                android:layout_marginRight="2dp"
                android:textAllCaps="true"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:paddingRight="23dp"
                android:paddingLeft="23dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/xanhduongdam"
                android:textSize="12sp"
                android:text="ĐĂNG NHẬP "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="|"
                android:textColor="@color/xanhduong"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/thoat"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left"
                android:textAllCaps="true"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:paddingRight="23dp"
                android:paddingLeft="23dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/xanhduongdam"
                android:textSize="12sp"
                android:text="THOÁT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
